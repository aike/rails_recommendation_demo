<h1>ブックマークコメントの編集</h1>

<% form_for(@bookmark) do |f| %>
  <%= f.error_messages %>
    <h1><%=h @bookmark.webpage.title %></h1>
    <span class="url"><%= link_to @bookmark.webpage.url, @bookmark.webpage.url %></span>
    <br />

    <p>
      <%= f.label :comment %><br />
      <%= f.text_field :comment %>
    </p>
    <p>
      <%= f.submit "Update" %>
    </p>
<% end %>

<%= link_to 'Back', bookmarks_path %>
